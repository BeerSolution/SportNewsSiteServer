{
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["ES6"],
        "module": "NodeNext",
        "rootDir": "./src",
        "typeRoots": ["src/types", "./node_modules/@types"],
        "moduleResolution": "NodeNext",
        "resolveJsonModule": true,
        "allowJs": true,
        "sourceMap": true,
        "outDir": "./build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "baseUrl": "src"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "lib": ["esnext"],
    "ts-node": {
        "esm": true
    }
}
