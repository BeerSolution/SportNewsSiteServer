{
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["ES6"],
        "module": "NodeNext",
        "rootDir": "./src",
        "moduleResolution": "NodeNext",
        "resolveJsonModule": true,
        "allowJs": true,
        "sourceMap": true,
        "outDir": "./build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "lib": ["esnext"],
    "ts-node": {
        "esm": true
    }
}
